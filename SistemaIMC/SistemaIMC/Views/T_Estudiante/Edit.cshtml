@* Ubicación: SistemaIMC/Views/T_Estudiante/Edit.cshtml *@

@model SistemaIMC.Models.T_Estudiante
@{
    ViewData["Title"] = "Modificar Estudiante";
}

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-warning">
                    <i class="fas fa-user-edit me-1"></i> Modificar Estudiante
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" class="needs-validation" novalidate>

                    <input type="hidden" asp-for="ID_Estudiante" />

                    <div class="form-group">
                        <label asp-for="RUT" class="control-label"></label>
                        <input asp-for="RUT" class="form-control" />
                        <span asp-validation-for="RUT" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NombreCompleto" class="form-label">Nombre Completo</label>
                        <input asp-for="NombreCompleto" class="form-control" placeholder="Ingrese el nombre completo" required>
                        <span asp-validation-for="NombreCompleto" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                            <input asp-for="FechaNacimiento" type="date" class="form-control" required>
                            <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Sexo" class="form-label">Sexo</label>
                            <select asp-for="Sexo" class="form-select" required>
                                <option value="">Seleccionar sexo</option>
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                            </select>
                            <span asp-validation-for="Sexo" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ID_Establecimiento" class="form-label">Establecimiento</label>
                            @* Idealmente, usar: <select asp-for="ID_Establecimiento" class="form-select" asp-items="ViewBag.Establecimientos"></select> *@
                            <input asp-for="ID_Establecimiento" type="number" class="form-control" placeholder="ID del Establecimiento" required>
                            <span asp-validation-for="ID_Establecimiento" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ID_Curso" class="form-label">Curso</label>
                            @* Idealmente, usar: <select asp-for="ID_Curso" class="form-select" asp-items="ViewBag.Cursos"></select> *@
                            <input asp-for="ID_Curso" type="number" class="form-control" placeholder="ID del Curso" required>
                            <span asp-validation-for="ID_Curso" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EstadoRegistro" class="form-label">Estado</label>
                        <select asp-for="EstadoRegistro" class="form-select" required>
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                        <span asp-validation-for="EstadoRegistro" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i> Actualizar Estudiante
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}