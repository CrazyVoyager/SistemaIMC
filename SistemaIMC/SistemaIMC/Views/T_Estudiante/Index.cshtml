﻿@* Ubicación: SistemaIMC/Views/T_Estudiante/Index.cshtml *@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gestión de Estudiantes";

    // Lógica de permisos para la vista:
    // Solo Admin y Profesor pueden Crear, Editar y Eliminar.
    bool puedeEditar = User.IsInRole("Administrador del Sistema") ||
                       User.IsInRole("Profesor / Encargado de Mediciones");
}
@model List<SistemaIMC.Models.T_Estudiante>

<div class="container-fluid">
    @* Header con título y botones de acción *@
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-user-graduate me-2 text-gradient"></i>Estudiantes
        </h1>
        <div class="d-flex flex-wrap gap-2">
            @if (puedeEditar)
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Nuevo Estudiante
                </a>
            }

            @* Botón: Importar Estudiantes (CSV) - NUEVO *@
            @if (puedeEditar)
            {
                <a asp-controller="ImportacionMasiva" asp-action="Estudiantes" class="btn btn-outline-primary" title="Importar Estudiantes desde CSV">
                    <i class="fas fa-file-import me-1"></i> Importar (CSV)
                </a>
            }

            @* Botón: Exportar TODO (sin filtros) *@
            <button type="button" class="btn btn-success"
                    onclick="exportarAExcel('ExportarEstudiantes', 'T_Estudiante', {}, event)"
                    title="Exportar todos los estudiantes">
                <i class="fas fa-file-excel me-1"></i> Exportar (Todo)
            </button>

            @* Botón: Exportar con Filtros (usa los parámetros actuales en la URL) *@
            <button type="button" class="btn btn-outline-success"
                    onclick="exportarConFiltros('ExportarEstudiantes', 'T_Estudiante', event)"
                    title="Exportar según filtros aplicados">
                <i class="fas fa-filter me-1"></i> Exportar (Con filtros)
            </button>
        </div>
    </div>

    @* Card de Filtros *@
    <div class="card filter-card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 fw-bold">
                <i class="fas fa-filter me-2"></i>Filtros de Búsqueda
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" id="formFiltros">
                @* Búsqueda por RUT *@
                <div class="row mb-3">
                    <div class="col-12">
                        <label for="searchRut" class="form-label fw-bold">
                            <i class="fas fa-id-card me-1 text-primary"></i>Buscar por RUT
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" name="searchRut" id="searchRut"
                                   class="form-control rut-input"
                                   placeholder="Ingrese RUT del estudiante (ej: 12345678-9)"
                                   value="@ViewData["CurrentFilterRut"]"
                                   maxlength="12">
                        </div>
                    </div>
                </div>

                @* Filtros Geográficos *@
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="ddlRegion" class="form-label">
                            <i class="fas fa-map me-1"></i>Región
                        </label>
                        <select name="RegionId" id="ddlRegion" class="form-select" asp-items="ViewBag.RegionId">
                            <option value="">Todas las Regiones</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="ddlComuna" class="form-label">
                            <i class="fas fa-map-marker-alt me-1"></i>Comuna
                        </label>
                        <select name="ComunaId" id="ddlComuna" class="form-select" asp-items="ViewBag.Comunas" disabled>
                            <option value="">Todas las Comunas</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="ddlEstablecimiento" class="form-label">
                            <i class="fas fa-school me-1"></i>Establecimiento
                        </label>
                        <select name="EstablecimientoId" id="ddlEstablecimiento" class="form-select" asp-items="ViewBag.Establecimientos" disabled>
                            <option value="">Todos</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="ddlCurso" class="form-label">
                            <i class="fas fa-chalkboard me-1"></i>Curso
                        </label>
                        <select name="CursoId" id="ddlCurso" class="form-select" asp-items="ViewBag.Cursos" disabled>
                            <option value="">Todos los Cursos</option>
                        </select>
                    </div>
                </div>

                @* Botones de acción del filtro *@
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-info">
                                <i class="fas fa-search me-1"></i> Buscar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-undo me-1"></i> Limpiar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* Tabla de Estudiantes *@
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-primary">
                <i class="fas fa-list me-2"></i>Lista de Estudiantes
            </h6>
            @if (Model != null && Model.Any())
            {
                <span class="badge bg-primary">@Model.Count registros</span>
            }
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width: 50px;">ID</th>
                                <th style="width: 120px;">RUT</th>
                                <th>Nombre Completo</th>
                                <th style="width: 110px;">F. Nacimiento</th>
                                <th style="width: 80px;">Sexo</th>
                                <th>Establecimiento</th>
                                <th style="width: 100px;">Curso</th>
                                <th style="width: 80px;">Estado</th>
                                <th style="width: 150px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var estudiante in Model)
                            {
                                <tr>
                                    <td class="text-center fw-bold">@estudiante.ID_Estudiante</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            <i class="fas fa-id-card me-1"></i>@(estudiante.RUT ?? "Sin RUT")
                                        </span>
                                    </td>
                                    <td class="fw-semibold">@estudiante.NombreCompleto</td>
                                    <td class="text-center">
                                        <small>@estudiante.FechaNacimiento.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td class="text-center">
                                        @if (estudiante.Sexo?.Sexo == "Masculino" || estudiante.Sexo?.Sexo == "M")
                                        {
                                            <i class="fas fa-mars text-info" title="Masculino"></i>
                                        }
                                        else if (estudiante.Sexo?.Sexo == "Femenino" || estudiante.Sexo?.Sexo == "F")
                                        {
                                            <i class="fas fa-venus text-danger" title="Femenino"></i>
                                        }
                                        else
                                        {
                                            <span class="text-muted">@(estudiante.Sexo?.Sexo ?? "N/A")</span>
                                        }
                                    </td>
                                    <td><small>@(estudiante.Establecimiento?.NombreEstablecimiento ?? "N/A")</small></td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@(estudiante.Curso?.NombreCurso ?? "N/A")</span>
                                    </td>
                                    <td class="text-center">
                                        @if (estudiante.EstadoRegistro)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@estudiante.ID_Estudiante" class="btn btn-info" title="Ver Detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <a asp-action="DescargarFicha" asp-route-id="@estudiante.ID_Estudiante" class="btn btn-dark" title="Descargar Ficha PDF" target="_blank">
                                                <i class="fas fa-file-pdf"></i>
                                            </a>

                                            <a href="#"
                                               data-estudiante-id="@estudiante.ID_Estudiante"
                                               class="btn btn-success btn-historial-modal"
                                               title="Historial de Mediciones"
                                               data-bs-toggle="modal"
                                               data-bs-target="#historialModal">
                                                <i class="fas fa-chart-line"></i>
                                            </a>
                                            @if (puedeEditar)
                                            {
                                                <a asp-action="Edit" asp-route-id="@estudiante.ID_Estudiante"
                                                   class="btn btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@estudiante.ID_Estudiante"
                                                   class="btn btn-danger" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-user-graduate"></i>
                    <h5>No hay estudiantes registrados</h5>
                    @if (puedeEditar)
                    {
                        <p>Comienza agregando un nuevo estudiante al sistema.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i> Crear Primer Estudiante
                        </a>
                    }
                    else
                    {
                        <p>No hay registros disponibles para visualizar.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>

@* Modal para Historial *@
<div class="modal fade" id="historialModal" tabindex="-1" aria-labelledby="historialModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center p-5">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="mt-3 text-muted">Cargando historial de mediciones...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/historialModal.js"></script>
    <script src="~/js/filtrosBusqueda.js"></script>
    <script src="~/js/site.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}