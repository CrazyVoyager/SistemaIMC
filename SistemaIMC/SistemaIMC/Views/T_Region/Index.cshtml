@* Ubicación: SistemaIMC/Views/T_Region/Index.cshtml *@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<SistemaIMC.Models.T_Region>
@{
    ViewData["Title"] = "Gestión de Regiones";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-map me-2 text-gradient"></i>Regiones
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nueva Región
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-primary">
                <i class="fas fa-list me-2"></i>Lista de Regiones
            </h6>
            @if (Model != null && Model.Any())
            {
                <span class="badge bg-primary">@Model.Count registros</span>
            }
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width: 80px;">ID</th>
                                <th>Nombre de la Región</th>
                                <th style="width: 150px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var region in Model)
                            {
                                <tr>
                                    <td class="text-center fw-bold">@region.ID_Region</td>
                                    <td class="fw-semibold">
                                        <i class="fas fa-map-marker-alt me-2 text-muted"></i>@region.NombreRegion
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@region.ID_Region"
                                               class="btn btn-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@region.ID_Region"
                                               class="btn btn-danger" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-map"></i>
                    <h5>No hay regiones registradas</h5>
                    <p>Comienza agregando una nueva región.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Crear Primera Región
                    </a>
                </div>
            }
        </div>
    </div>
</div>