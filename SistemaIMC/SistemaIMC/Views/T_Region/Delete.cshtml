@* Ubicación: SistemaIMC/Views/T_Region/Delete.cshtml *@

@model SistemaIMC.Models.T_Region
@{
    ViewData["Title"] = "Eliminar Región";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card border-left-danger shadow-sm">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-exclamation-triangle me-1"></i> Confirmar Eliminación
                </h6>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-trash-alt fa-3x text-danger mb-3"></i>
                    <h4 class="text-gray-800">¿Está seguro de eliminar esta región?</h4>
                    <p class="text-gray-600">Esta acción no se puede deshacer.</p>
                </div>

                <div class="alert alert-warning">
                    <h6 class="alert-heading">Información de la Región a Eliminar:</h6>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4"><strong>ID:</strong></div>
                        <div class="col-sm-8">@Model.ID_Region</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-4"><strong>Nombre:</strong></div>
                        <div class="col-sm-8">@Model.NombreRegion</div>
                    </div>
                    <hr>
                    <p class="mb-0"><strong>¡Atención!</strong> Eliminar esta región puede afectar a las comunas o usuarios que la tengan asignada.</p>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ID_Region" />

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-1"></i>
                            <asp-validation-summary />
                            @Html.ValidationSummary(true, "", new { @class = "mb-0" })
                        </div>
                    }

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i> Confirmar Eliminación
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>