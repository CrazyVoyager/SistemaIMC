@* Ubicación: SistemaIMC/Views/T_CategoriaIMC/Create.cshtml *@

@model SistemaIMC.Models.T_CategoriaIMC
@{
    ViewData["Title"] = "Crear Categoría IMC";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-plus me-1"></i> Crear Nueva Categoría IMC
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>

                    @* El ID_CategoriaIMC es autoincremental, no se pide *@

                    <div class="mb-3">
                        <label asp-for="NombreCategoria" class="form-label">Nombre de la Categoría</label>
                        <input asp-for="NombreCategoria" class="form-control" placeholder="Ej: Sobrepeso" required>
                        <span asp-validation-for="NombreCategoria" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="RangoMinIMC" class="form-label">Rango Mínimo (Opcional)</label>
                            <input asp-for="RangoMinIMC" type="number" step="0.01" class="form-control" placeholder="Ej: 25.0">
                            <span asp-validation-for="RangoMinIMC" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="RangoMaxIMC" class="form-label">Rango Máximo (Opcional)</label>
                            <input asp-for="RangoMaxIMC" type="number" step="0.01" class="form-control" placeholder="Ej: 29.9">
                            <span asp-validation-for="RangoMaxIMC" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i> Guardar Categoría
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}