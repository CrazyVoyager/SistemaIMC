@* Ubicación: SistemaIMC/Views/T_MedicionNutricional/Index.cshtml *@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gestión de Mediciones";

    // Lógica de permisos:
    bool puedeEditar = User.IsInRole("Administrador del Sistema") ||
                       User.IsInRole("Profesor / Encargado de Mediciones");
}
@model List<SistemaIMC.Models.T_MedicionNutricional>

<div class="container-fluid">
    @* Header con título y botones *@
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-weight me-2 text-gradient"></i>Mediciones Nutricionales
        </h1>
        <div class="d-flex flex-wrap gap-2">
            @if (puedeEditar)
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Nueva Medición
                </a>
            }
            <button type="button" class="btn btn-success" onclick="exportarConFiltros('ExportarMediciones', 'T_MedicionNutricional')">
                <i class="fas fa-file-excel me-1"></i> Exportar Excel
            </button>
        </div>
    </div>

    @* Card de Filtros *@
    <div class="card filter-card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 fw-bold">
                <i class="fas fa-filter me-2"></i>Filtros de Búsqueda
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" id="formFiltros">
                @* Búsqueda por RUT *@
                <div class="row mb-3">
                    <div class="col-12">
                        <label for="searchRut" class="form-label fw-bold">
                            <i class="fas fa-id-card me-1 text-primary"></i>Buscar por RUT del Estudiante
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" name="searchRut" id="searchRut"
                                   class="form-control rut-input"
                                   placeholder="Ingrese RUT del estudiante (ej: 12345678-9)"
                                   value="@ViewData["CurrentFilterRut"]"
                                   maxlength="12">
                        </div>
                    </div>
                </div>

                @* Filtros Geográficos *@
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="ddlRegion" class="form-label">
                            <i class="fas fa-map me-1"></i>Región
                        </label>
                        <select name="RegionId" id="ddlRegion" class="form-select" asp-items="ViewBag.RegionId">
                            <option value="">Todas las Regiones</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="ddlComuna" class="form-label">
                            <i class="fas fa-map-marker-alt me-1"></i>Comuna
                        </label>
                        <select name="ComunaId" id="ddlComuna" class="form-select" asp-items="ViewBag.Comunas" disabled>
                            <option value="">Todas las Comunas</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="ddlEstablecimiento" class="form-label">
                            <i class="fas fa-school me-1"></i>Establecimiento
                        </label>
                        <select name="EstablecimientoId" id="ddlEstablecimiento" class="form-select" asp-items="ViewBag.Establecimientos" disabled>
                            <option value="">Todos</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="ddlCurso" class="form-label">
                            <i class="fas fa-chalkboard me-1"></i>Curso
                        </label>
                        <select name="CursoId" id="ddlCurso" class="form-select" asp-items="ViewBag.Cursos" disabled>
                            <option value="">Todos los Cursos</option>
                        </select>
                    </div>
                </div>

                @* Botones de acción *@
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-info">
                                <i class="fas fa-search me-1"></i> Buscar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-undo me-1"></i> Limpiar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* Tabla de Mediciones *@
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-primary">
                <i class="fas fa-list me-2"></i>Lista de Mediciones
            </h6>
            @if (Model != null && Model.Any())
            {
                <span class="badge bg-primary">@Model.Count registros</span>
            }
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width: 50px;">ID</th>
                                <th style="width: 110px;">RUT</th>
                                <th>Estudiante</th>
                                <th style="width: 100px;">Fecha</th>
                                <th style="width: 70px;">Peso</th>
                                <th style="width: 80px;">Estatura</th>
                                <th style="width: 70px;">IMC</th>
                                <th style="width: 120px;">Categoría</th>
                                <th style="width: 80px;">Z-Score</th>
                                <th>Docente</th>
                                <th style="width: 150px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var medicion in Model)
                            {
                                <tr>
                                    <td class="text-center fw-bold">@medicion.ID_Medicion</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            <i class="fas fa-id-card me-1"></i>@(medicion.Estudiante?.RUT ?? "N/A")
                                        </span>
                                    </td>
                                    <td class="fw-semibold">@medicion.Estudiante?.NombreCompleto</td>
                                    <td class="text-center">
                                        <small>@medicion.FechaMedicion.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@medicion.Peso_kg kg</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">@medicion.Estatura_cm cm</span>
                                    </td>
                                    <td class="text-center fw-bold">
                                        @(medicion.IMC.HasValue ? medicion.IMC.Value.ToString("F1") : "N/A")
                                    </td>
                                    <td class="text-center">
                                        @{
                                            var categoria = medicion.CategoriaIMC?.NombreCategoria ?? "N/A";
                                            var badgeClass = categoria.ToLower() switch
                                            {
                                                var c when c.Contains("normal") => "bg-success",
                                                var c when c.Contains("bajo") || c.Contains("desnutri") => "bg-warning",
                                                var c when c.Contains("sobre") || c.Contains("obes") => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @badgeClass">@categoria</span>
                                    </td>
                                    <td class="text-center">
                                        @(medicion.ClasificacionFinal?.Puntuacion_Z.ToString("F2") ?? "N/A")
                                    </td>
                                    <td><small>@(medicion.DocenteEncargado?.Nombre ?? "N/A")</small></td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@medicion.ID_Medicion"
                                               class="btn btn-info" title="Ver Detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (puedeEditar)
                                            {
                                                <a asp-action="Edit" asp-route-id="@medicion.ID_Medicion"
                                                   class="btn btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@medicion.ID_Medicion"
                                                   class="btn btn-danger" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-weight"></i>
                    <h5>No hay mediciones registradas</h5>
                    @if (puedeEditar)
                    {
                        <p>Comienza registrando una nueva medición nutricional.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i> Registrar Primera Medición
                        </a>
                    }
                    else
                    {
                        <p>No hay registros disponibles para visualizar.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/filtrosBusqueda.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}