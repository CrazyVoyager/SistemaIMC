@* Ubicación: SistemaIMC/Views/T_MedicionNutricional/Index.cshtml *@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Gestión de Mediciones";

    // Lógica de permisos:
    bool puedeEditar = User.IsInRole("Administrador del Sistema") ||
                       User.IsInRole("Profesor / Encargado de Mediciones");
}
@model List<SistemaIMC.Models.T_MedicionNutricional>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-weight me-2"></i>Mediciones Nutricionales</h1>

        @* BOTÓN CREAR: Solo Admin y Profesor *@
        @if (puedeEditar)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Nueva Medición
            </a>
        }

        <!-- Botón simple sin parámetros -->
        <button type="button" class="btn btn-success" onclick="exportarAExcel('ExportarMediciones', 'T_MedicionNutricional')">
            <i class="bi bi-file-earmark-excel"></i> Exportar a Excel
        </button>

        <!-- Con filtros -->
        <button type="button" class="btn btn-success" onclick="exportarConFiltros('ExportarMediciones', 'T_MedicionNutricional')">
            <i class="bi bi-file-earmark-excel"></i> Exportar a Excel
        </button>
    </div>
    <form asp-action="Index" method="get" class="mb-4" id="formFiltros">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Filtro Geográfico y Curricular</h6>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="searchRut" class="form-label fw-bold text-primary">Buscar por RUT</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" name="searchRut" id="searchRut"
                                   class="form-control rut-input"
                                   placeholder="Ingrese RUT del estudiante (ej: 12.345.678-9)"
                                   value="@ViewData["CurrentFilterRut"]"
                                   maxlength="12">  
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="ddlRegion" class="form-label">Región</label>
                        <select name="RegionId" id="ddlRegion" class="form-select form-control" asp-items="ViewBag.RegionId">
                            <option value="">Todas las Regiones</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="ddlComuna" class="form-label">Comuna</label>
                        <select name="ComunaId" id="ddlComuna" class="form-select form-control" asp-items="ViewBag.Comunas" disabled>
                            <option value="">Todas las Comunas</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="ddlEstablecimiento" class="form-label">Establecimiento</label>
                        <select name="EstablecimientoId" id="ddlEstablecimiento" class="form-select form-control" asp-items="ViewBag.Establecimientos" disabled>
                            <option value="">Todos los Establecimientos</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="ddlCurso" class="form-label">Curso</label>
                        <select name="CursoId" id="ddlCurso" class="form-select form-control" asp-items="ViewBag.Cursos" disabled>
                            <option value="">Todos los Cursos</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-info w-100">
                            <i class="fas fa-filter me-1"></i> Aplicar Filtro
                        </button>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="fas fa-undo me-1"></i> Limpiar Filtros
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Mediciones</h6>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>RUT</th>
                                <th>Nombre del Estudiante</th>
                                <th>Fecha Medición</th>
                                <th>Peso (kg)</th>
                                <th>Estatura (cm)</th>
                                <th>Categoría</th>
                                <th>Z-Score</th>
                                <th>IMC</th>
                                <th>Docente</th>
                                <th>Fecha Registro</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var medicion in Model)
                            {
                                <tr>
                                    <td>@medicion.ID_Medicion</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            @(medicion.Estudiante?.RUT ?? "Sin RUT")
                                        </span>
                                    </td>
                                    <td>@medicion.Estudiante?.NombreCompleto</td>
                                    <td>@medicion.FechaMedicion.ToString("dd-MM-yyyy")</td>
                                    <td>@medicion.Peso_kg</td>
                                    <td>@medicion.Estatura_cm</td>
                                    <td>@medicion.CategoriaIMC?.NombreCategoria</td>
                                    <td>@(medicion.ClasificacionFinal != null ? medicion.ClasificacionFinal.Puntuacion_Z.ToString() : "N/A")</td>
                                    <td>@(medicion.IMC.HasValue? medicion.IMC.Value.ToString("F2") : "N/A")</td>
                                    <td>@medicion.DocenteEncargado?.Nombre</td>
                                    <td>@medicion.FechaRegistro.ToString()</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @* DETALLES: Visible para TODOS *@
                                            <a asp-action="Details" asp-route-id="@medicion.ID_Medicion"
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-info-circle"></i> Detalles
                                            </a>

                                            @* EDITAR / ELIMINAR: Solo Admin y Profesor *@
                                            @if (puedeEditar)
                                            {
                                                <a asp-action="Edit" asp-route-id="@medicion.ID_Medicion"
                                                   class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i> Editar
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@medicion.ID_Medicion"
                                                   class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Eliminar
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-weight fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">No hay mediciones registradas</h5>

                    @if (puedeEditar)
                    {
                        <p class="text-gray-500">Comienza agregando una nueva medición.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i> Registrar Primera Medición
                        </a>
                    }
                    else
                    {
                        <p class="text-gray-500">No hay registros disponibles para visualizar.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        <script src="~/js/filtrosBusqueda.js"></script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}