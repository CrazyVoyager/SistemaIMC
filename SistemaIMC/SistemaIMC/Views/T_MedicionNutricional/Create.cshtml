@* Ubicación: SistemaIMC/Views/T_MedicionNutricional/Create.cshtml *@

@model SistemaIMC.Models.T_MedicionNutricional
@{
    ViewData["Title"] = "Registrar Medición";
}

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-plus me-1"></i> Registrar Nueva Medición
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ID_Estudiante" class="form-label">Estudiante</label>
                            <select asp-for="ID_Estudiante" class="form-select" asp-items="ViewBag.ID_Estudiante" required>
                                <option value="">-- Seleccionar Estudiante --</option>
                            </select>
                            <span asp-validation-for="ID_Estudiante" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ID_DocenteEncargado" class="form-label">Docente Encargado</label>
                            <select asp-for="ID_DocenteEncargado" class="form-select" asp-items="ViewBag.ID_DocenteEncargado" required>
                                <option value="">-- Seleccionar Docente --</option>
                            </select>
                            <span asp-validation-for="ID_DocenteEncargado" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaMedicion" class="form-label">Fecha de Medición</label>
                            <input asp-for="FechaMedicion" type="date" class="form-control" required>
                            <span asp-validation-for="FechaMedicion" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Peso_kg" class="form-label">Peso (kg)</label>
                            <input asp-for="Peso_kg" type="number" step="0.01" class="form-control" placeholder="Ej: 65.5" required>
                            <span asp-validation-for="Peso_kg" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Estatura_cm" class="form-label">Estatura (cm)</label>
                            <input asp-for="Estatura_cm" type="number" step="0.01" class="form-control" placeholder="Ej: 175.5" required>
                            <span asp-validation-for="Estatura_cm" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observaciones" class="form-label">Observaciones (Opcional)</label>
                        <textarea asp-for="Observaciones" class="form-control" rows="3" placeholder="Observaciones adicionales..."></textarea>
                        <span asp-validation-for="Observaciones" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i> Guardar Medición
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}