@model List<SistemaIMC.Models.T_MedicionNutricional>

@* Obtener los datos del estudiante de ViewData *@
@{
    string nombreEstudiante = ViewData["NombreEstudiante"] as string ?? "Estudiante Desconocido";
    string rutEstudiante = ViewData["RUTEstudiante"] as string ?? "Sin RUT";
}

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title" id="historialModalLabel">
        <i class="fas fa-chart-line me-2"></i> Historial de Mediciones
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="mb-4">
        <h6 class="text-secondary">Estudiante: <span class="fw-bold text-dark">@nombreEstudiante</span></h6>
        <h6 class="text-secondary">RUT: <span class="fw-bold text-dark">@rutEstudiante</span></h6>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Fecha Medición</th>
                    <th>Categoría IMC</th>
                    <th>Observaciones</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FechaMedicion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge bg-@(@item.ClasificacionFinal?.ColorClasificacion ?? "secondary")">
                                @(item.CategoriaIMC?.NombreCategoria ?? "Pendiente")
                            </span>
                        </td>
                        <td>@(string.IsNullOrEmpty(item.Observaciones) ? "Sin observaciones" : item.Observaciones)</td>
                        <td>
                            @* Botón para ir a los detalles de la medición específica *@
                            <a asp-controller="T_MedicionNutricional"
                               asp-action="Details"
                               asp-route-id="@item.ID_Medicion"
                               class="btn btn-sm btn-info"
                               title="Ver Detalle">
                                <i class="fas fa-eye"></i> Ir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No existen mediciones registradas para este estudiante.
        </div>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
    @if (User.IsInRole("Administrador del Sistema") || User.IsInRole("Profesor / Encargado de Mediciones"))
    {
        <a asp-action="Create"
           asp-controller="T_MedicionNutricional"
           id="btnNuevaMedicionModal"
           asp-route-estudianteId="@ViewData["ID_Estudiante"]"
           class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nueva Medición
        </a>
    }
</div>