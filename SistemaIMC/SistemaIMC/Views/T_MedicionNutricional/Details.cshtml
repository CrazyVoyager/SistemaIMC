@model SistemaIMC.Models.T_MedicionNutricional

@{
    ViewData["Title"] = "Detalles de Medición";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-search me-2"></i> Detalles de Medición Nutricional</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary">
            <h6 class="m-0 font-weight-bold text-white">Medición #@Model.ID_Medicion</h6>
        </div>
        <div class="card-body">
            
            @* SECCIÓN 1: DATOS GENERALES *@
            <h5 class="text-primary mb-3">Datos Generales</h5>
            <dl class="row border-bottom pb-2 mb-4">
                <dt class="col-sm-3">Estudiante</dt>
                <dd class="col-sm-9">@Model.Estudiante?.NombreCompleto</dd>

                <dt class="col-sm-3">Docente Encargado</dt>
                <dd class="col-sm-9">@Model.DocenteEncargado?.Nombre</dd>
                
                <dt class="col-sm-3">Fecha Medición</dt>
                <dd class="col-sm-9">@Model.FechaMedicion.ToString("dd-MM-yyyy")</dd>
                
                <dt class="col-sm-3">Edad en Meses</dt>
                @* Se muestra el valor de la tabla T_MedicionNutricional o ClasificacionFinal *@
                <dd class="col-sm-9">@(Model.Edad_Meses_Medicion.HasValue ? Model.Edad_Meses_Medicion.Value.ToString() : "N/A")</dd>
            </dl>

            @* SECCIÓN 2: DATOS ANTROPOMÉTRICOS (ENTRADA) *@
            <h5 class="text-primary mb-3">Datos Antropométricos (Entrada)</h5>
            <dl class="row border-bottom pb-2 mb-4">
                <dt class="col-sm-3">Peso (kg)</dt>
                <dd class="col-sm-9">@Model.Peso_kg.ToString("F1") kg</dd>

                <dt class="col-sm-3">Estatura (cm)</dt>
                <dd class="col-sm-9">@Model.Estatura_cm.ToString("F1") cm</dd>
            </dl>

            @* SECCIÓN 3: RESULTADOS NUTRICIONALES (SALIDA) *@
            <h5 class="text-primary mb-3">Resultados de Clasificación (Patrones OMS)</h5>
            <dl class="row border-bottom pb-2 mb-4">
                
                <dt class="col-sm-3">IMC Calculado</dt>
                <dd class="col-sm-9">@(Model.IMC.HasValue ? Model.IMC.Value.ToString("F2") : "N/A")</dd> @* <--- IMC AGREGADO *@

                <dt class="col-sm-3">Puntuación Z (Z-Score)</dt>
                @* Se accede a la propiedad de navegación ClasificacionFinal *@
                <dd class="col-sm-9">
                    @(Model.ClasificacionFinal != null ? Model.ClasificacionFinal.Puntuacion_Z.ToString("F2") : "Pendiente") 
                </dd>

                <dt class="col-sm-3">Categoría IMC</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success">@Model.CategoriaIMC?.NombreCategoria</span> @* <--- CATEGORÍA AGREGADA *@
                </dd>
                
                <dt class="col-sm-3">Referencia Normativa</dt>
                <dd class="col-sm-9">
                    @(Model.ClasificacionFinal != null ? Model.ClasificacionFinal.Referencia_Normativa : Model.Referencia_Normativa) @* <--- REFERENCIA AGREGADA *@
                </dd>
            </dl>

            @* SECCIÓN 4: OBSERVACIONES *@
            <h5 class="text-primary mb-3">Observaciones y Registro</h5>
            <dl class="row">
                <dt class="col-sm-3">Observaciones</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Observaciones) ? "Sin observaciones." : Model.Observaciones)</dd>

                <dt class="col-sm-3">Fecha de Registro</dt>
                <dd class="col-sm-9">@Model.FechaRegistro?.ToString()</dd>
            </dl>

        </div>
    </div>
</div>

<div class="my-4">
    <a asp-action="Edit" asp-route-id="@Model?.ID_Medicion" class="btn btn-warning"><i class="fas fa-edit me-1"></i> Editar</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i> Volver a la Lista</a>
</div>