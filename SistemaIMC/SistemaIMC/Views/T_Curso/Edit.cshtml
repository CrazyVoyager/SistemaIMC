@* Ubicación: SistemaIMC/Views/Cursos/Edit.cshtml *@

@model SistemaIMC.Models.T_Curso
@{
    ViewData["Title"] = "Modificar Curso";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-warning">
                    <i class="fas fa-edit me-1"></i> Modificar Curso
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" class="needs-validation" novalidate>

                    <input type="hidden" asp-for="ID_Curso" />

                    <div class="mb-3">
                        <label asp-for="NombreCurso" class="form-label">Nombre del Curso</label>
                        <input asp-for="NombreCurso" class="form-control" placeholder="Ej: 1ro Medio A" required>
                        <span asp-validation-for="NombreCurso" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ID_Establecimiento" class="form-label">Establecimiento</label>
                        @* ⭐ CAMBIO: Se usa el tag helper <select> para cargar los establecimientos de ViewBag.ID_Establecimiento ⭐ *@
                        <select asp-for="ID_Establecimiento" class="form-select" asp-items="ViewBag.ID_Establecimiento" required>
                            <option value="">Seleccionar Establecimiento</option>
                        </select>
                        <span asp-validation-for="ID_Establecimiento" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i> Actualizar Curso
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}