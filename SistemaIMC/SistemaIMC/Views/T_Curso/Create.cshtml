@* Ubicación: SistemaIMC/Views/T_Curso/Create.cshtml *@

@model SistemaIMC.Models.T_Curso
@{
    ViewData["Title"] = "Crear Curso";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-plus me-1"></i> Crear Nuevo Curso
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>

                    @* El ID_Curso es autoincremental, no se pide *@

                    <div class="mb-3">
                        <label asp-for="NombreCurso" class="form-label">Nombre del Curso</label>
                        <input asp-for="NombreCurso" class="form-control" placeholder="Ej: 1ro Medio A" required>
                        <span asp-validation-for="NombreCurso" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ID_Establecimiento" class="form-label">Establecimiento</label>
                        @* Idealmente, usar: <select asp-for="ID_Establecimiento" class="form-select" asp-items="ViewBag.Establecimientos"></select> *@
                        <input asp-for="ID_Establecimiento" type="number" class="form-control" placeholder="ID del Establecimiento" required>
                        <span asp-validation-for="ID_Establecimiento" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i> Guardar Curso
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}