@* Ubicación: SistemaIMC/Views/T_Usuario/Edit.cshtml *@

@model SistemaIMC.Models.T_Usuario
@{
    ViewData["Title"] = "Modificar Usuario";
}

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-warning">
                    <i class="fas fa-edit me-1"></i> Modificar Usuario
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                    @* Campo oculto para enviar el ID del usuario que se está modificando *@
                    <input type="hidden" asp-for="ID_Usuario" />

                    <div class="row">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RUT" class="form-label">RUT</label>
                                <input asp-for="RUT" class="form-control" placeholder="12.345.678-9" required maxlength="10">
                                <span asp-validation-for="RUT" class="text-danger small"></span>
                            </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre Completo</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre completo" required>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CorreoElectronico" class="form-label">Correo Electrónico</label>
                            <input asp-for="CorreoElectronico" type="email" class="form-control" placeholder="usuario@ejemplo.com" required>
                            <span asp-validation-for="CorreoElectronico" class="text-danger small"></span>
                        </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ID_Rol" class="form-label">Rol de Usuario</label>

                                @* Usamos asp-items para llenar la lista automáticamente desde el ViewBag *@
                                <select asp-for="ID_Rol" class="form-select" asp-items="ViewBag.ID_Rol" required>
                                    <option value="">Seleccione un Rol</option>
                                </select>

                                <span asp-validation-for="ID_Rol" class="text-danger small"></span>
                            </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EstadoRegistro" class="form-label">Estado</label>
                            <select asp-for="EstadoRegistro" class="form-select" required>
                                <option value="">Seleccionar estado</option>
                                <option value="true">Activo</option>
                                <option value="false">Inactivo</option>
                            </select>
                            <span asp-validation-for="EstadoRegistro" class="text-danger small"></span>
                        </div>
                    </div>

                    @* NOTA: Se omite intencionalmente el campo Contrasena. 
                       La modificación de contraseñas debe manejarse en una vista separada y segura. *@

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i> Actualizar Usuario
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}