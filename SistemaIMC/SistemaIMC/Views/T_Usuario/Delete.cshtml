@* Ubicación: SistemaIMC/Views/Usuarios/Delete.cshtml *@

@model SistemaIMC.Models.T_Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card border-left-danger shadow-sm">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-exclamation-triangle me-1"></i> Confirmar Eliminación
                </h6>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-trash-alt fa-3x text-danger mb-3"></i>
                    <h4 class="text-gray-800">¿Está seguro de eliminar este usuario?</h4>
                    <p class="text-gray-600">Esta acción no se puede deshacer.</p>
                </div>

                <div class="alert alert-warning">
                    <h6 class="alert-heading">Información del Usuario a Eliminar:</h6>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4"><strong>ID:</strong></div>
                        <div class="col-sm-8">@Model.ID_Usuario</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-4"><strong>Nombre:</strong></div>
                        <div class="col-sm-8">@Model.Nombre</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-4"><strong>RUT:</strong></div>
                        <div class="col-sm-8">@Model.RUT</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-4"><strong>Email:</strong></div>
                        <div class="col-sm-8">@Model.CorreoElectronico</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-4"><strong>Estado:</strong></div>
                        <div class="col-sm-8">
                            <span class="badge bg-@(@Model.EstadoRegistro ? "success" : "danger")">
                                @(@Model.EstadoRegistro ? "Activo" : "Inactivo")
                            </span>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    @* Campo oculto para enviar el ID del usuario a eliminar *@
                    <input type="hidden" asp-for="ID_Usuario" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i> Confirmar Eliminación
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>