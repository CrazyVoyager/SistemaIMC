@* Ubicación: SistemaIMC/Views/T_Comuna/Create.cshtml *@

@model SistemaIMC.Models.T_Comuna
@{
    ViewData["Title"] = "Crear Comuna";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-plus me-1"></i> Crear Nueva Comuna
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>

                    @* El ID_Comuna es autoincremental, no se pide *@

                    <div class="mb-3">
                        <label asp-for="NombreComuna" class="form-label">Nombre de la Comuna</label>
                        <input asp-for="NombreComuna" class="form-control" placeholder="Ej: Concepción" required>
                        <span asp-validation-for="NombreComuna" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ID_Region" class="form-label">Región</label>
                        <select asp-for="ID_Region" class="form-select" asp-items="ViewBag.ID_Region" required>
                            <option value="">Seleccionar Región</option>
                        </select>
                        <span asp-validation-for="ID_Region" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i> Guardar Comuna
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}