@* Ubicación: SistemaIMC/Views/T_Comuna/Edit.cshtml *@

@model SistemaIMC.Models.T_Comuna
@{
    ViewData["Title"] = "Modificar Comuna";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-warning">
                    <i class="fas fa-edit me-1"></i> Modificar Comuna
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" class="needs-validation" novalidate>

                    <input type="hidden" asp-for="ID_Comuna" />

                    <div class="mb-3">
                        <label asp-for="NombreComuna" class="form-label">Nombre de la Comuna</label>
                        <input asp-for="NombreComuna" class="form-control" placeholder="Ej: Concepción" required>
                        <span asp-validation-for="NombreComuna" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ID_Region" class="form-label">Región</label>
                        @* Idealmente, usar: <select asp-for="ID_Region" class="form-select" asp-items="ViewBag.Regiones"></select> *@
                        <input asp-for="ID_Region" type="number" class="form-control" placeholder="ID de la Región" required>
                        <span asp-validation-for="ID_Region" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i> Actualizar Comuna
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}