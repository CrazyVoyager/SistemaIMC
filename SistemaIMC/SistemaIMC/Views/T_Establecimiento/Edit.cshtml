@* Ubicación: SistemaIMC/Views/T_Establecimiento/Edit.cshtml *@

@model SistemaIMC.Models.T_Establecimiento
@{
    ViewData["Title"] = "Modificar Establecimiento";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-warning">
                    <i class="fas fa-edit me-1"></i> Modificar Establecimiento
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" class="needs-validation" novalidate>

                    <input type="hidden" asp-for="ID_Establecimiento" />

                    <div class="mb-3">
                        <label asp-for="NombreEstablecimiento" class="form-label">Nombre del Establecimiento</label>
                        <input asp-for="NombreEstablecimiento" class="form-control" placeholder="Ej: Liceo A-1" required>
                        <span asp-validation-for="NombreEstablecimiento" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Direccion" class="form-label">Dirección del Establecimiento</label>
                        <input asp-for="Direccion" class="form-control" placeholder="Ej: Calle 123" required>
                        <span asp-validation-for="Direccion" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ID_Comuna" class="form-label">Comuna</label>
                        @* ⭐ CAMBIO: Se usa el tag helper <select> y ViewBag.ID_Comuna ⭐ *@
                        <select asp-for="ID_Comuna" class="form-select" asp-items="ViewBag.ID_Comuna" required>
                            <option value="">Seleccionar Comuna</option>
                        </select>
                        <span asp-validation-for="ID_Comuna" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EstadoRegistro" class="form-label">Estado</label>
                        <select asp-for="EstadoRegistro" class="form-select" required>
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                        <span asp-validation-for="EstadoRegistro" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i> Actualizar Establecimiento
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}