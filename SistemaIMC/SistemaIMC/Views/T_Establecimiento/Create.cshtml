@* Ubicación: SistemaIMC/Views/T_Establecimiento/Create.cshtml *@

@model SistemaIMC.Models.T_Establecimiento
@{
    ViewData["Title"] = "Crear Establecimiento";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-plus me-1"></i> Crear Nuevo Establecimiento
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>

                    @* El ID_Establecimiento es autoincremental, no se pide *@

                    <div class="mb-3">
                        <label asp-for="NombreEstablecimiento" class="form-label">Nombre del Establecimiento</label>
                        <input asp-for="NombreEstablecimiento" class="form-control" placeholder="Ej: Liceo A-1" required>
                        <span asp-validation-for="NombreEstablecimiento" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Direccion" class="form-label">Dirección del Establecimiento</label>
                        <input asp-for="Direccion" class="form-control" placeholder="Ej: Calle 123" required>
                        <span asp-validation-for="Direccion" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ID_Comuna" class="form-label">Comuna</label>
                        @* Idealmente, usar: <select asp-for="ID_Comuna" class="form-select" asp-items="ViewBag.Comunas"></select> *@
                        <input asp-for="ID_Comuna" type="number" class="form-control" placeholder="ID de la Comuna" required>
                        <span asp-validation-for="ID_Comuna" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EstadoRegistro" class="form-label">Estado</label>
                        <select asp-for="EstadoRegistro" class="form-select" required>
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                        <span asp-validation-for="EstadoRegistro" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i> Guardar Establecimiento
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}