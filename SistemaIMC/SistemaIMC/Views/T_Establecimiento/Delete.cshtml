@* Ubicación: SistemaIMC/Views/T_Establecimiento/Delete.cshtml *@

@model SistemaIMC.Models.T_Establecimiento
@{
    ViewData["Title"] = "Eliminar Establecimiento";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card border-left-danger shadow-sm">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-exclamation-triangle me-1"></i> Confirmar Eliminación
                </h6>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-trash-alt fa-3x text-danger mb-3"></i>
                    <h4 class="text-gray-800">¿Está seguro de eliminar este establecimiento?</h4>
                    <p class="text-gray-600">Esta acción no se puede deshacer.</p>
                </div>

                <div class="alert alert-warning">
                    <h6 class="alert-heading">Información del Establecimiento a Eliminar:</h6>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4"><strong>ID:</strong></div>
                        <div class="col-sm-8">@Model.ID_Establecimiento</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-4"><strong>Nombre:</strong></div>
                        <div class="col-sm-8">@Model.NombreEstablecimiento</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-4"><strong>ID Comuna:</strong></div>
                        <div class="col-sm-8">@Model.ID_Comuna</div>
                    </div>
                    <hr>
                    <p class="mb-0"><strong>¡Atención!</strong> Eliminar este establecimiento puede afectar a los estudiantes o cursos que lo tengan asignado.</p>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ID_Establecimiento" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i> Confirmar Eliminación
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>