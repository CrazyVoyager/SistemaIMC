@* Ubicación: SistemaIMC/Views/T_Establecimiento/Index.cshtml *@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<SistemaIMC.Models.T_Establecimiento>
@{
    ViewData["Title"] = "Gestión de Establecimientos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-school me-2"></i>Establecimientos</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nuevo Establecimiento
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Establecimientos</h6>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nombre del Establecimiento</th>
                                <th>Direccion</th>
                                <th>Comuna</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var establecimiento in Model)
                            {
                                <tr>
                                    <td>@establecimiento.ID_Establecimiento</td>
                                    <td>@establecimiento.NombreEstablecimiento</td>
                                    <td>@establecimiento.Direccion</td>
                                    <td>@establecimiento.Comuna?.NombreComuna</td>
                                    <td>
                                        @if (establecimiento.EstadoRegistro)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@establecimiento.ID_Establecimiento"
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@establecimiento.ID_Establecimiento"
                                               class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-school fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">No hay establecimientos registrados</h5>
                    <p class="text-gray-500">Comienza agregando un nuevo establecimiento.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Crear Primer Establecimiento
                    </a>
                </div>
            }
        </div>
    </div>
</div>