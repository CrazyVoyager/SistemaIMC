@{
    ViewData["Title"] = "Página Principal";
}

<!-- 1. ENCABEZADO DE BIENVENIDA -->
<div class="card shadow-sm mb-4 border-0">
    <div class="card-body p-4 p-md-5 rounded" style="background-color: #f8f9fc;">
        <h1 class="display-6 fw-bold">¡Bienvenido al Sistema IMC!</h1>
        <p class="col-md-10 fs-5 text-muted">Esta es la plataforma para la gestión y seguimiento nutricional de los estudiantes. Desde aquí puede acceder a los principales módulos del sistema.</p>
        <hr class="my-4">
        <p class="text-muted">Utilice el menú lateral ( <i class="fas fa-bars"></i> ) para navegar por todas las opciones de configuración y administración.</p>
    </div>
</div>

<!-- 2. TARJETAS DE ACCESO RÁPIDO -->
<div class="row">

    <!-- Tarjeta: Gestión Nutricional -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow h-100">
            <div class="card-body d-flex flex-column">
                <div class="mb-3">
                    <i class="fas fa-user-graduate fa-2x text-primary"></i>
                </div>
                <h5 class="card-title">Gestión Nutricional</h5>
                <p class="card-text text-muted">Administre estudiantes y registre sus mediciones nutricionales detalladas.</p>
                <div class="mt-auto">
                    <!-- Asumiendo que tus controladores se llaman T_EstudianteController, etc. -->
                    <a asp-controller="T_Estudiante" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-users me-1"></i> Ir a Estudiantes
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjeta: Administración -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow h-100">
            <div class="card-body d-flex flex-column">
                <div class="mb-3">
                    <i class="fas fa-users-cog fa-2x text-success"></i>
                </div>
                <h5 class="card-title">Administración</h5>
                <p class="card-text text-muted">Gestione las cuentas de usuario (docentes, administradores) y sus respectivos roles en el sistema.</p>
                <div class="mt-auto">
                    <a asp-controller="T_Usuario" asp-action="Index" class="btn btn-success">
                        <i class="fas fa-user-shield me-1"></i> Ir a Usuarios
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjeta: Configuración -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow h-100">
            <div class="card-body d-flex flex-column">
                <div class="mb-3">
                    <i class="fas fa-cogs fa-2x text-warning"></i>
                </div>
                <h5 class="card-title">Configuración</h5>
                <p class="card-text text-muted">Configure las tablas base del sistema: establecimientos, cursos, regiones, comunas y categorías de IMC.</p>
                <div class="mt-auto">
                    <a asp-controller="T_Establecimiento" asp-action="Index" class="btn btn-warning text-dark">
                        <i class="fas fa-cog me-1"></i> Configurar
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>