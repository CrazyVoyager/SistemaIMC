<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaIMC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: 600;
        }

        .card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 1.5rem;
        }

        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            font-weight: 600;
        }

        .btn {
            border-radius: 0.35rem;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #6e707e;
        }

        /* 1. Aplicamos tu degradado al componente Offcanvas */
        .sidebar.offcanvas {
            background: linear-gradient(180deg, #4e73df 0%, #224abe 100%);
        }

        /* 2. Estilo para el header del menú (nuevo) */
        .sidebar .offcanvas-header {
            padding-top: 1.15rem;
            padding-bottom: 1.1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* 3. Estilo para el botón hamburguesa */
        #sidebarToggle {
            cursor: pointer;
            color: #6c757d;
        }

            #sidebarToggle:hover {
                color: #2a2b2e;
            }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 0.75rem 1rem;
            font-weight: 500; /* Un poco más legible */
        }

            .sidebar .nav-link:hover {
                color: #fff;
                background-color: rgba(255, 255, 255, 0.1);
            }

            .sidebar .nav-link i {
                margin-right: 0.5rem;
                width: 1.25em; /* Alinea los iconos */
            }

        /* --- NUEVO: ESTILOS PARA MENÚ DESPLEGABLE --- */

        /* Estilo para la flecha */
        .sidebar .nav-link[data-bs-toggle="collapse"]::after {
            content: '\f078'; /* Icono de flecha (chevron-down) */
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            float: right;
            transition: transform 0.2s ease-in-out;
        }

        /* Gira la flecha cuando el menú está abierto */
        .sidebar .nav-link[data-bs-toggle="collapse"][aria-expanded="true"]::after {
            transform: rotate(180deg);
        }

        /* Estilo para los sub-items (más indentación, menos padding) */
        .sidebar .collapse .nav-link {
            padding: 0.5rem 1rem 0.5rem 2.5rem; /* 2.5rem de indentación */
            font-size: 0.9em;
            color: rgba(255, 255, 255, 0.7);
        }

        .sidebar .collapse .nav-link:hover {
             color: #fff;
             background-color: rgba(255, 255, 255, 0.15);
        }
        /* --- FIN DE ESTILOS NUEVOS --- */

    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="offcanvas offcanvas-start sidebar" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">

                <div class="offcanvas-header">
                    <h4 class="text-white" id="sidebarOffcanvasLabel"><i class="fas fa-heartbeat me-2"></i> SistemaIMC</h4>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <div class="offcanvas-body p-0">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Inicio
                            </a>
                        </li>

                        <li class="nav-item px-3"><hr class="text-white-50 my-2 p-0"></li>

                        <li class="nav-item">
                            <a class="nav-link" href="#nutricionMenu" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="nutricionMenu">
                                <i class="fas fa-user-graduate"></i> Gestión Nutricional
                            </a>
                            <div class="collapse" id="nutricionMenu">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="T_Estudiante" asp-action="Index">
                                            Estudiantes
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="T_MedicionNutricional" asp-action="Index">
                                            Mediciones
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#adminMenu" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="adminMenu">
                                <i class="fas fa-users-cog"></i> Administración
                            </a>
                            <div class="collapse" id="adminMenu">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="T_Usuario" asp-action="Index">
                                            Usuarios
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="T_Rol" asp-action="Index">
                                            Roles
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#configMenu" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="configMenu">
                                <i class="fas fa-cogs"></i> Configuración
                            </a>
                            <div class="collapse" id="configMenu">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="T_Establecimiento" asp-action="Index">
                                            Establecimientos
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="T_Curso" asp-action="Index">
                                            Cursos
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="T_Comuna" asp-action="Index">
                                            Comunas
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="T_Region" asp-action="Index">
                                            Regiones
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="T_CategoriaIMC" asp-action="Index">
                                            Categorías IMC
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <main id="main-content" class="col-md-12 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

                    <div class="d-flex align-items-center">

                        <button id="sidebarToggle" class="btn btn-link me-2 p-0" type="button"
                                data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas"
                                aria-controls="sidebarOffcanvas">
                            <i class="fas fa-bars fs-4"></i>
                        </button>

                        <h1 class="h2">@ViewData["Title"]</h1>
                    </div>

                </div>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>