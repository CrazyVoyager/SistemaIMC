@* Ubicación: SistemaIMC/Views/T_Rol/Create.cshtml *@

@model SistemaIMC.Models.T_Rol
@{
    ViewData["Title"] = "Crear Rol";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-plus me-1"></i> Crear Nuevo Rol
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>

                    @* El ID_Rol es autoincremental, no se pide *@

                    <div class="mb-3">
                        <label asp-for="NombreRol" class="form-label">Nombre del Rol</label>
                        <input asp-for="NombreRol" class="form-control" placeholder="Ej: Administrador" required>
                        <span asp-validation-for="NombreRol" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i> Guardar Rol
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}