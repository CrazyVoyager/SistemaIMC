@* Ubicación: SistemaIMC/Views/T_Rol/Edit.cshtml *@

@model SistemaIMC.Models.T_Rol
@{
    ViewData["Title"] = "Modificar Rol";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-warning">
                    <i class="fas fa-edit me-1"></i> Modificar Rol
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" class="needs-validation" novalidate>

                    <input type="hidden" asp-for="ID_Rol" />

                    <div class="mb-3">
                        <label asp-for="NombreRol" class="form-label">Nombre del Rol</label>
                        <input asp-for="NombreRol" class="form-control" placeholder="Ej: Administrador" required>
                        <span asp-validation-for="NombreRol" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i> Actualizar Rol
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}