<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaIMC Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Estilos de login específicos: Centrar y dar estilo de tarjeta al formulario */
        body {
            display: flex;
            align-items: center;
            /* Ocupar el 100% de la altura de la vista */
            min-height: 100vh;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5; /* Fondo claro */
        }

        .form-signin {
            width: 100%;
            max-width: 330px; /* Ancho máximo para el formulario */
            padding: 15px;
            margin: auto;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="text-center">
    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>